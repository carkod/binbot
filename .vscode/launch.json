  "version": "0.0.3",
  "configurations": [
    {
      "name": "API",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/api/app.py",
      "console": "internalConsole",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start"
      ],
      "cwd": "${workspaceFolder}/web/",
      "port": 3000,
      "skipFiles": [
        "node_modules/**"
      ]
    }
  ]
}