  "version": "0.0.3",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start"
      ],
      "cwd": "${workspaceFolder}/web/",
      "port": 3000,
      "skipFiles": [
        "node_modules/**"
      ]
    },

    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "console": "internalConsole",
      "env": {
        "FLASK_APP": "api/app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
      ],
      "jinja": true
    }
  ]
}